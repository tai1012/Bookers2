<% if @user.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved: </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>User info</h2>
<%= form_with model: @user, local:true do |f| %>
<div>
  <label for="inputName">Name</label>
  <div class='profile_edit'><%= f.text_field :name, autofocus: true, id:"inputName" %></div>
</div>

<div>
  <label for="inputImage">Image</label>
  <div class='profile_edit'><%= f.attachment_field :profile_image, placeholder:"プロフィール画像"%>
</div>

<div>
  <label for="inputIntroduction">Introduction</label>
  <div class='profile_edit'><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %></div>
</div>

<div class='switch'><%= f.submit'Update User'%></div>
<% end %>