<h2>User info</h2>
  <div class='profile-container'>
    <p>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg"%>
    </p>
    <table class="table">
      <p>Name <%= user.name %></p>
      <p>Introduction <%= user.introduction %></p>
    </table>
    <% if user == current_user %>
    <!--<a class="btn btn outline-secondary btn-block fas fa-user-cog" href='//edit'>-->
      <%= link_to edit_user_path(user) do %>
        <button class="btn btn outline-secondary btn-block fas fa-user-cog"></button>
      <% end %>

    <% end %>
  </div>
  <!--btn btn-outline-secondary btn-block fas fa-user-cog -->