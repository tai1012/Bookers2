<h2>User info</h2>
  <div class='profile-container'>
    <div>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg", size:"100x100"%>
    </div>
    <table class="table">
      <tbody>
        <tr>
          <th>Name</th> <th><%= user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th> <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div>
    <%= link_to edit_user_path(user) do %>
      <button class="btn btn-outline-secondary btn-block fas fa-user-cog"></button>
    </div>
    <% end %>
  </div>
