<%= render 'layouts/notifications' %>

<div class="notice"></div>

<%= render'users/user', user: @user %>
<%= render'books/book', book: @new_book %>



<h2>Books</h2>
<section>
  <div>
    <th>Title</th>
    <th>Opinion</th>
  </div>
  <% @books.each do |book|%>
  <div>
    <td class='image'><%= link_to (attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg"), user_path(@user) %></td>
    <td class='title'><%= link_to book.title, book_path(book) %></td>
    <td class='opnion'><%= book.body %></td>
  </div>
  <% end %>
</section>






