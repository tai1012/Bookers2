<%= render 'layouts/notifications' %>
<div class="notice"></div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render'users/user', user: @user %>

    <%= render'books/book', book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <% @books.each do |book|%>
        <tbody>
          <td class='image'><%= link_to (attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x'), user_path(@user) %></td>
          <td class='title'><%= link_to book.title, book_path(book) %></td>
          <td class='opnion'><%= book.body %></td>
        </tbody>
        <% end %>
      </table>
    <div>
  </div>
</div>






