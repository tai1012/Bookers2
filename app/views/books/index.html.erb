<% if @book.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved: </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render'users/user', user: current_user %>
<%= render'books/book', book: @book %>

<h2>Books</h2>

<section>
  <th>Title</th>
  <th>Opinion</th>
  <% @books.each do |book|%>
  <td class='image'>
      <%= link_to (attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg"), user_path(book.user)  %>
    </td>
    <td class='title'><%= link_to book.title, book_path(book) %></td>
    <td class='body'><%= book.body %></td>
  <% end %>
  <!--< % end %>-->
</div>
</section>


