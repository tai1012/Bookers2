<h2>User info</h2>
<% @books.each do |book|%>
<div>
  <p>#self_image</p>
  <p>Name <%= book.user.name %></p>
  <p>Introduction<#self_introduction></p>
</div>
<% end %>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opnion</h4>
  <%= f.text_area :body %>
  <h4>
  <%= f.submit"Create Book"%>
  </h4>
<% end %>
