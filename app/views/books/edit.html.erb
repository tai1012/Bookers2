<div class="notice"><%= flash[:notice] %></div>

<% if @book.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved: </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>Editing Book</h2>
<%= form_with model: @book, local:true do |f| %>
<div>
  <label for="inputTitle">Title</label>
  <div class='book_edit'><%= f.text_field :title, autofocus: true, id:"inputTitle" %></div>
</div>

<div>
  <label for="inputBody">Opnion</label>
  <div class="book_edit"><%= f.text_area :body, autofocus: true, id:"inputBody" %></div>
</div>
<div class="switch"><%= f.submit'Update Book' %></div>
<% end %>

